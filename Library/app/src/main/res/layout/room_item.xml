<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewRoomType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oda Tipi"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewAllowedUsers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kullanıcılar"/>

        <TextView
            android:id="@+id/textViewPeopleLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kişi Sınırı"/>

        <TextView
            android:id="@+id/textViewRoomCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toplam Oda"/>

        <TextView
            android:id="@+id/textViewDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Süre"/>

        <Button
            android:id="@+id/reserveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rezerve Et"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
